mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*dist/index.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx server/index.ts"

[[workflows.workflow]]
name = "Production Build"
author = 47315380
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*dist/index.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production npm run start"

